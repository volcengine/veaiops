{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Base TypeScript Configuration for VolcAIOpsKit",
  "compilerOptions": {
    "target": "ES2021",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "node",
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "incremental": true,
    "composite": false,
    "declaration": false,
    "declarationMap": false,
    "noEmit": true,
    "baseUrl": ".",
    "types": ["node"],
    "typeRoots": ["./node_modules/@types", "./node_modules"],
    "paths": {
      "@veaiops/components": ["packages/components/src"],
      "@veaiops/utils": ["packages/utils/src"],
      "@veaiops/constants": ["packages/constants/src"],
      "@veaiops/types": ["packages/types/src"],
      "@veaiops/hooks": ["packages/hooks/src"],
      "@veaiops/api-client": ["packages/api-client/src"]
    }
  },
  "include": ["global.d.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    ".nx",
    "**/node_modules",
    "**/dist",
    "**/*.test.*",
    "**/*.spec.*"
  ]
}
