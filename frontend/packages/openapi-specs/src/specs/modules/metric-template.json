  },
  "paths": {
    "/apis/v1/datasource/template/": {
      "get": {
        "summary": "Get All Metric Templates",
        "description": "Get all metric templates with optional pagination",
        "tags": ["Metric Template"],
        "parameters": [
          {
            "name": "skip",
            "in": "query",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 0,
              "minimum": 0
            },
            "description": "Number of templates to skip"
          },
          {
            "name": "limit",
            "in": "query",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 100,
              "minimum": 1,
              "maximum": 1000
            },
            "description": "Maximum number of templates to return"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/APIResponseMetricTemplateList"
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Create Metric Template",
        "description": "Create a new metric template",
        "tags": ["Metric Template"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/MetricTemplateCreateRequest"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created Successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/APIResponse"
                }
              }
            }
          }
        }
      }
    },
    "/apis/v1/datasource/template/{uid}": {
      "get": {
        "summary": "Get Metric Template",
        "description": "Get a metric template by ID",
        "tags": ["Metric Template"],
        "parameters": [
          {
            "name": "uid",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Template unique identifier"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/APIResponseMetricTemplate"
                }
              }
            }
          }
        }
      },
      "put": {
        "summary": "Update Metric Template",
