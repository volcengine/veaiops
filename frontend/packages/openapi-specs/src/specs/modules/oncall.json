          "action_category": {
            "type": "string",
            "enum": ["Detect", "Filter"],
            "description": "行为类别"
          },
          "inspect_category": {
            "type": "string",
            "enum": ["Semantic", "RE"],
            "description": "检测类别"
          }
        },
        "required": ["name", "action_category", "inspect_category"]
      },
      "APIResponseInterest": {
