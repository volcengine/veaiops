{
  "openapi": "3.0.0",
  "info": {
    "title": "VolcAIOpsKit - Oncall API",
    "version": "1.0.0",
    "description": "值班管理相关接口"
  },
  "paths": {
    "/apis/v1/manager/rule-center/oncall/{channel}/{bot_id}": {
      "get": {
        "summary": "Get Oncall Rules by App ID",
        "description": "Get interest rules according to App ID",
        "tags": ["Oncall Rule"],
        "parameters": [
          {
            "name": "channel",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Channel"
          },
          {
            "name": "bot_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "App ID"
          }
        ],
        "responses": {
          "200": {
            "description": "Oncall rules retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/APIResponseInterestList"
                }
              }
            }
          }
        }
      }
      },
    "/apis/v1/manager/rule-center/oncall/{channel}/{bot_id}/": {
      "post": {
        "summary": "Create Oncall Interest Rule",
        "description": "Create a new oncall interest rule for a specific bot",
        "tags": ["Oncall Rule"],
        "parameters": [
          {
            "name": "channel",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Channel"
          },
          {
            "name": "bot_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "App ID"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/InterestCreateRequest"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Interest rule created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/APIResponseInterest"
                }
              }
            }
          }
        }
      }
    },
    "/apis/v1/manager/rule-center/oncall/{interest_uuid}": {
      "put": {
        "summary": "Update Interest Rule",
        "description": "Update an interest rule",
        "tags": ["Oncall Rule"],
        "parameters": [
          {
            "name": "interest_uuid",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Interest rule UUID"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/InterestUpdateRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Interest rule updated successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/APIResponseInterest"
                }
              }
            }
          }
        }
      }
    },
    "/apis/v1/manager/rule-center/oncall/{interest_uuid}/active": {
      "put": {
        "summary": "Update Interest Active Status",
        "description": "Update the active status of an interest rule for a specific bot",
        "tags": ["Oncall Rule"],
        "parameters": [
          {
            "name": "interest_uuid",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Interest rule UUID"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "is_active": {
                    "type": "boolean",
                    "description": "Whether the interest rule is active"
                  }
                },
                "required": ["is_active"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Interest active status updated successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/APIResponseBoolean"
                }
              }
            }
          }
        }
      }
    },
    "/apis/v1/manager/rule-center/oncall/{channel}/{bot_id}/oncall_schedule/": {
      "post": {
        "summary": "Create Oncall Schedule",
        "description": "Create a new oncall schedule for a specific rule",
        "tags": ["Oncall Schedule"],
        "parameters": [
          {
            "name": "channel",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Channel"
          },
          {
            "name": "bot_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "App ID"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/OncallScheduleCreateRequest"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Oncall schedule created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/APIResponseOncallSchedule"
                }
              }
            }
          }
        }
      },
      "get": {
        "summary": "Get Oncall Schedules",
        "description": "Get all oncall schedules for a specific rule",
        "tags": ["Oncall Schedule"],
        "parameters": [
          {
            "name": "channel",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Channel"
          },
          {
            "name": "bot_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "App ID"
          },
          {
            "name": "skip",
            "in": "query",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 0,
              "minimum": 0
            },
            "description": "Number of schedules to skip"
          },
          {
            "name": "limit",
            "in": "query",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 100,
              "minimum": 1,
              "maximum": 1000
            },
            "description": "Maximum number of schedules to return"
          },
          {
            "name": "start_time",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string",
              "format": "date-time"
            },
            "description": "Filter schedules from start time"
          },
          {
            "name": "end_time",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string",
              "format": "date-time"
            },
            "description": "Filter schedules to end time"
          }
        ],
        "responses": {
          "200": {
            "description": "Oncall schedules retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/PaginatedAPIResponseOncallScheduleList"
                }
              }
            }
          }
        }
      }
    },
    "/apis/v1/manager/rule-center/oncall/oncall_schedule/{schedule_id}": {
      "get": {
        "summary": "Get Oncall Schedule",
        "description": "Get an oncall schedule by ID",
        "tags": ["Oncall Schedule"],
        "parameters": [
          {
            "name": "schedule_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Schedule ID"
          }
        ],
        "responses": {
          "200": {
            "description": "Oncall schedule retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/APIResponseOncallSchedule"
                }
              }
            }
          }
        }
      },
      "put": {
        "summary": "Update Oncall Schedule",
        "description": "Update an oncall schedule",
        "tags": ["Oncall Schedule"],
        "parameters": [
          {
            "name": "schedule_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Schedule ID"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/OncallScheduleUpdateRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Oncall schedule updated successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/APIResponseOncallSchedule"
                }
              }
            }
          }
        }
      },
      "delete": {
        "summary": "Delete Oncall Schedule",
        "description": "Delete an oncall schedule",
        "tags": ["Oncall Schedule"],
        "parameters": [
          {
            "name": "schedule_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Schedule ID"
          }
        ],
        "responses": {
          "200": {
            "description": "Oncall schedule deleted successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/APIResponseBoolean"
                }
              }
            }
          }
        }
      }
    }
  },
