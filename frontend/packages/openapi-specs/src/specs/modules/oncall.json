{
  "openapi": "3.0.0",
  "info": {
    "title": "VolcAIOpsKit - Oncall API",
    "version": "1.0.0",
    "description": "Oncall management related APIs"
  },
  "paths": {
    "/apis/v1/manager/rule-center/oncall/{channel}/{bot_id}": {
      "get": {
        "summary": "Get Oncall Rules by App ID",
        "description": "Get interest rules according to App ID",
        "tags": ["Oncall Rule"],
        "parameters": [
          {
            "name": "channel",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Channel"
          },
          {
            "name": "bot_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "App ID"
          }
        ],
        "responses": {
          "200": {
            "description": "Oncall rules retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/APIResponseInterestList"
                }
              }
            }
          }
        }
      }
    },
    "/apis/v1/manager/rule-center/oncall/{interest_uuid}": {
      "put": {
        "summary": "Update Interest Rule",
        "description": "Update an interest rule",
        "tags": ["Oncall Rule"],
        "parameters": [
          {
            "name": "interest_uuid",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Interest rule UUID"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/InterestUpdateRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Interest rule updated successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/APIResponseInterest"
                }
              }
            }
          }
        }
      }
    },
    "/apis/v1/manager/rule-center/oncall/{interest_uuid}/active": {
      "put": {
        "summary": "Update Interest Active Status",
        "description": "Update the active status of an interest rule for a specific bot",
        "tags": ["Oncall Rule"],
        "parameters": [
          {
            "name": "interest_uuid",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Interest rule UUID"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "is_active": {
                    "type": "boolean",
                    "description": "Whether the interest rule is active"
                  }
                },
                "required": ["is_active"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Interest active status updated successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/APIResponseBoolean"
                }
              }
            }
          }
        }
      }
    },
    "/apis/v1/manager/rule-center/oncall/{channel}/{bot_id}/oncall_schedule/": {
      "post": {
        "summary": "Create Oncall Schedule",
        "description": "Create a new oncall schedule for a specific rule",
        "tags": ["Oncall Schedule"],
        "parameters": [
          {
            "name": "channel",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Channel"
          },
          {
            "name": "bot_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "App ID"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/OncallScheduleCreateRequest"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Oncall schedule created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/APIResponseOncallSchedule"
                }
              }
            }
          }
        }
      },
      "get": {
        "summary": "Get Oncall Schedules",
        "description": "Get all oncall schedules for a specific rule",
        "tags": ["Oncall Schedule"],
        "parameters": [
          {
            "name": "channel",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Channel"
          },
          {
            "name": "bot_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "App ID"
          },
          {
            "name": "skip",
            "in": "query",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 0,
              "minimum": 0
            },
            "description": "Number of schedules to skip"
          },
          {
            "name": "limit",
            "in": "query",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 100,
              "minimum": 1,
              "maximum": 1000
            },
            "description": "Maximum number of schedules to return"
          },
          {
            "name": "start_time",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string",
              "format": "date-time"
            },
            "description": "Filter schedules from start time"
          },
          {
            "name": "end_time",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string",
              "format": "date-time"
            },
            "description": "Filter schedules to end time"
          }
        ],
        "responses": {
          "200": {
            "description": "Oncall schedules retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/PaginatedAPIResponseOncallScheduleList"
                }
              }
            }
          }
        }
      }
    },
    "/apis/v1/manager/rule-center/oncall/oncall_schedule/{schedule_id}": {
      "get": {
        "summary": "Get Oncall Schedule",
        "description": "Get an oncall schedule by ID",
        "tags": ["Oncall Schedule"],
        "parameters": [
          {
            "name": "schedule_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Schedule ID"
          }
        ],
        "responses": {
          "200": {
            "description": "Oncall schedule retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/APIResponseOncallSchedule"
                }
              }
            }
          }
        }
      },
      "put": {
        "summary": "Update Oncall Schedule",
        "description": "Update an oncall schedule",
        "tags": ["Oncall Schedule"],
        "parameters": [
          {
            "name": "schedule_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Schedule ID"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/OncallScheduleUpdateRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Oncall schedule updated successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/APIResponseOncallSchedule"
                }
              }
            }
          }
        }
      },
      "delete": {
        "summary": "Delete Oncall Schedule",
        "description": "Delete an oncall schedule",
        "tags": ["Oncall Schedule"],
        "parameters": [
          {
            "name": "schedule_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Schedule ID"
          }
        ],
        "responses": {
          "200": {
            "description": "Oncall schedule deleted successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/APIResponseBoolean"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "APIResponse": {
        "type": "object",
        "properties": {
          "code": {
            "type": "integer"
          },
          "message": {
            "type": "string"
          },
          "data": {}
        }
      },
      "APIResponseBoolean": {
        "type": "object",
        "properties": {
          "code": {
            "type": "integer"
          },
          "message": {
            "type": "string"
          },
          "data": {
            "type": "boolean"
          }
        }
      },
      "Interest": {
        "type": "object",
        "properties": {
          "uuid": {
            "type": "string",
            "description": "Interest rule UUID"
          },
          "name": {
            "type": "string",
            "description": "Interest rule name"
          },
          "description": {
            "type": "string",
            "description": "Interest rule description"
          },
          "level": {
            "type": "string",
            "enum": ["P0", "P1", "P2"],
            "description": "Alert level"
          },
          "examples_positive": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Positive examples"
          },
          "examples_negative": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Negative examples"
          },
          "action_category": {
            "type": "string",
            "enum": ["Detect", "Filter"],
            "description": "Interest action category"
          },
          "inspect_category": {
            "type": "string",
            "enum": ["Semantic", "RE"],
            "description": "Interest inspect category"
          },
          "regular_expression": {
            "type": "string",
            "description": "Regular expression for RE inspection"
          },
          "inspect_history": {
            "type": "integer",
            "default": 0,
            "description": "Number of history messages to inspect"
          },
          "silence_delta": {
            "type": "string",
            "description": "Alert suppression interval"
          },
          "is_active": {
            "type": "boolean",
            "default": true,
            "description": "Whether the interest rule is active"
          },
          "created_at": {
            "type": "string",
            "format": "date-time",
            "description": "Creation timestamp"
          },
          "updated_at": {
            "type": "string",
            "format": "date-time",
            "description": "Last update timestamp"
          },
          "version": {
            "type": "integer",
            "description": "Version number"
          }
        },
        "required": ["name", "action_category", "inspect_category"]
      },
      "InterestUpdateRequest": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "Rule name"
          },
          "description": {
            "type": "string",
            "description": "Description"
          },
          "level": {
            "type": "string",
            "enum": ["P0", "P1", "P2"],
            "description": "Alert level"
          },
          "silence_delta": {
            "type": "string",
            "description": "Alert suppression interval"
          },
          "is_active": {
            "type": "boolean",
            "description": "Whether enabled"
          },
          "examples_positive": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Positive examples (editable when inspection category is semantic analysis)"
          },
          "examples_negative": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Negative examples (editable when inspection category is semantic analysis)"
          },
          "regular_expression": {
            "type": "string",
            "description": "Regular expression (editable when inspection category is regular expression)"
          }
        }
      },
      "APIResponseInterest": {
        "type": "object",
        "properties": {
          "code": {
            "type": "integer"
          },
          "message": {
            "type": "string"
          },
          "data": {
            "$ref": "#/components/schemas/Interest"
          }
        }
      },
      "APIResponseInterestList": {
        "type": "object",
        "properties": {
          "code": {
            "type": "integer"
          },
          "message": {
            "type": "string"
          },
          "data": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Interest"
            }
          }
        }
      },
      "OncallSchedule": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Oncall schedule ID"
          },
          "rule_id": {
            "type": "string",
            "description": "Associated rule ID"
          },
          "name": {
            "type": "string",
            "description": "Oncall schedule name"
          },
          "description": {
            "type": "string",
            "description": "Oncall schedule description"
          },
          "schedule_type": {
            "type": "string",
            "enum": ["daily", "weekly", "monthly", "custom"],
            "description": "Oncall schedule type"
          },
          "participants": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "user_id": {
                  "type": "string",
                  "description": "User ID"
                },
                "user_name": {
                  "type": "string",
                  "description": "User name"
                },
                "contact_info": {
                  "type": "object",
                  "description": "Contact information",
                  "properties": {
                    "phone": {
                      "type": "string"
                    },
                    "email": {
                      "type": "string"
                    },
                    "chat_id": {
                      "type": "string"
                    }
                  }
                },
                "priority": {
                  "type": "integer",
                  "description": "Priority"
                }
              },
              "required": ["user_id", "user_name"]
            },
            "description": "Oncall participants list"
          },
          "schedule_config": {
            "type": "object",
            "description": "Oncall schedule configuration",
            "properties": {
              "rotation_interval": {
                "type": "integer",
                "description": "Rotation interval (hours)"
              },
              "start_time": {
                "type": "string",
                "format": "time",
                "description": "Start time"
              },
              "end_time": {
                "type": "string",
                "format": "time",
                "description": "End time"
              },
              "timezone": {
                "type": "string",
                "description": "Timezone"
              },
              "weekdays": {
                "type": "array",
                "items": {
                  "type": "integer",
                  "minimum": 0,
                  "maximum": 6
                },
                "description": "Weekdays (0=Sunday, 6=Saturday)"
              }
            }
          },
          "escalation_policy": {
            "type": "object",
            "description": "Escalation policy",
            "properties": {
              "enabled": {
                "type": "boolean",
                "description": "Whether escalation is enabled"
              },
              "escalation_timeout": {
                "type": "integer",
                "description": "Escalation timeout (minutes)"
              },
              "escalation_levels": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "level": {
                      "type": "integer"
                    },
                    "participants": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    },
                    "timeout": {
                      "type": "integer"
                    }
                  }
                },
                "description": "Escalation level configuration"
              }
            }
          },
          "is_active": {
            "type": "boolean",
            "default": true,
            "description": "Whether active"
          },
          "effective_start": {
            "type": "string",
            "format": "date-time",
            "description": "Effective start time"
          },
          "effective_end": {
            "type": "string",
            "format": "date-time",
            "description": "Effective end time"
          },
          "created_at": {
            "type": "string",
            "format": "date-time",
            "description": "Creation time"
          },
          "updated_at": {
            "type": "string",
            "format": "date-time",
            "description": "Last update timestamp"
          }
        },
        "required": [
          "rule_id",
          "name",
          "schedule_type",
          "participants",
          "schedule_config"
        ]
      },
      "OncallScheduleCreateRequest": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "Oncall schedule name"
          },
          "description": {
            "type": "string",
            "description": "Oncall schedule description"
          },
          "schedule_type": {
            "type": "string",
            "enum": ["daily", "weekly", "monthly", "custom"],
            "description": "Oncall schedule type"
          },
          "participants": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "user_id": {
                  "type": "string",
                  "description": "User ID"
                },
                "user_name": {
                  "type": "string",
                  "description": "User name"
                },
                "contact_info": {
                  "type": "object",
                  "description": "Contact information"
                },
                "priority": {
                  "type": "integer",
                  "description": "Priority"
                }
              },
              "required": ["user_id", "user_name"]
            },
            "description": "Oncall participants list"
          },
          "schedule_config": {
            "type": "object",
            "description": "Oncall schedule configuration"
          },
          "escalation_policy": {
            "type": "object",
            "description": "Escalation policy"
          },
          "effective_start": {
            "type": "string",
            "format": "date-time",
            "description": "Effective start time"
          },
          "effective_end": {
            "type": "string",
            "format": "date-time",
            "description": "Effective end time"
          }
        },
        "required": ["name", "schedule_type", "participants", "schedule_config"]
      },
      "OncallScheduleUpdateRequest": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "Oncall schedule name"
          },
          "description": {
            "type": "string",
            "description": "Oncall schedule description"
          },
          "participants": {
            "type": "array",
            "items": {
              "type": "object"
            },
            "description": "Oncall participants list"
          },
          "schedule_config": {
            "type": "object",
            "description": "Oncall schedule configuration"
          },
          "escalation_policy": {
            "type": "object",
            "description": "Escalation policy"
          },
          "is_active": {
            "type": "boolean",
            "description": "Whether active"
          },
          "effective_start": {
            "type": "string",
            "format": "date-time",
            "description": "Effective start time"
          },
          "effective_end": {
            "type": "string",
            "format": "date-time",
            "description": "Effective end time"
          }
        }
      },
      "APIResponseOncallSchedule": {
        "type": "object",
        "properties": {
          "code": {
            "type": "integer"
          },
          "message": {
            "type": "string"
          },
          "data": {
            "$ref": "#/components/schemas/OncallSchedule"
          }
        }
      },
      "PaginatedAPIResponseOncallScheduleList": {
        "type": "object",
        "properties": {
          "code": {
            "type": "integer"
          },
          "message": {
            "type": "string"
          },
          "data": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/OncallSchedule"
            }
          },
          "limit": {
            "type": "integer"
          },
          "skip": {
            "type": "integer"
          },
          "total": {
            "type": "integer"
          }
        }
      }
    }
  }
}
