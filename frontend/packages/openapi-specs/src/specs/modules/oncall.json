      "OncallSchedule": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "值班计划ID"
          },
          "rule_id": {
            "type": "string",
            "description": "关联的规则ID"
          },
          "name": {
            "type": "string",
            "description": "值班计划名称"
          },
          "description": {
            "type": "string",
            "description": "值班计划描述"
          },
          "schedule_type": {
            "type": "string",
            "enum": ["daily", "weekly", "monthly", "custom"],
            "description": "值班计划类型"
          },
          "participants": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "user_id": {
                  "type": "string",
                  "description": "用户ID"
                },
                "user_name": {
                  "type": "string",
                  "description": "用户名"
                },
                "contact_info": {
                  "type": "object",
                  "description": "联系信息",
                  "properties": {
                    "phone": {
                      "type": "string"
                    },
                    "email": {
                      "type": "string"
                    },
                    "chat_id": {
                      "type": "string"
                    }
                  }
                },
                "priority": {
                  "type": "integer",
                  "description": "优先级"
                }
              },
              "required": ["user_id", "user_name"]
            },
            "description": "值班参与者列表"
          },
          "schedule_config": {
            "type": "object",
            "description": "值班计划配置",
            "properties": {
              "rotation_interval": {
                "type": "integer",
                "description": "轮换间隔（小时）"
              },
              "start_time": {
                "type": "string",
                "format": "time",
                "description": "开始时间"
              },
              "end_time": {
                "type": "string",
                "format": "time",
                "description": "结束时间"
              },
              "timezone": {
                "type": "string",
                "description": "时区"
              },
              "weekdays": {
                "type": "array",
                "items": {
                  "type": "integer",
                  "minimum": 0,
                  "maximum": 6
                },
                "description": "工作日（0=周日，6=周六）"
              }
            }
          },
          "escalation_policy": {
            "type": "object",
            "description": "升级策略",
            "properties": {
              "enabled": {
                "type": "boolean",
                "description": "是否启用升级"
              },
              "escalation_timeout": {
                "type": "integer",
                "description": "升级超时时间（分钟）"
              },
              "escalation_levels": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "level": {
                      "type": "integer"
                    },
                    "participants": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    },
                    "timeout": {
                      "type": "integer"
                    }
                  }
                },
                "description": "升级级别配置"
              }
            }
          },
          "is_active": {
            "type": "boolean",
            "default": true,
            "description": "是否激活"
          },
          "effective_start": {
            "type": "string",
            "format": "date-time",
            "description": "生效开始时间"
          },
          "effective_end": {
            "type": "string",
            "format": "date-time",
            "description": "生效结束时间"
          },
          "created_at": {
            "type": "string",
            "format": "date-time",
            "description": "创建时间"
          },
          "updated_at": {
            "type": "string",
            "format": "date-time",
            "description": "更新时间"
          }
        },
        "required": [
          "rule_id",
          "name",
          "schedule_type",
          "participants",
          "schedule_config"
        ]
      },
