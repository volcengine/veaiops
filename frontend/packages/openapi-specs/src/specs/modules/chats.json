{
  "openapi": "3.0.0",
  "info": {
    "title": "VolcAIOpsKit - Chats API",
    "version": "1.0.0",
    "description": "Chat management related API endpoints"
  },
  "paths": {
    "/apis/v1/config/chats/{uid}": {
      "get": {
        "summary": "Get Chats By Bot Id",
        "description": "Get chats filtered by bot document uid with pagination",
        "tags": ["Chats"],
        "parameters": [
          {
            "name": "uid",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Bot Document ID to filter chats"
          },
          {
            "name": "skip",
            "in": "query",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 0,
              "minimum": 0
            },
            "description": "Number of chats to skip"
          },
          {
            "name": "limit",
            "in": "query",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 100,
              "minimum": 1,
              "maximum": 1000
            },
            "description": "Maximum number of chats to return"
          },
          {
            "name": "force_update",
            "in": "query",
            "required": false,
            "schema": {
              "type": "boolean",
              "default": false
            },
            "description": "Force update group chat information"
          },
          {
            "name": "is_active",
            "in": "query",
            "required": false,
            "schema": {
              "type": "boolean",
              "default": true
            },
            "description": "Filter chats by is_active status (default: true)"
          },
          {
            "name": "name",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string"
            },
            "description": "Filter chats by name (fuzzy search)"
          },
          {
            "name": "enable_func_interest",
            "in": "query",
            "required": false,
            "schema": {
              "type": "boolean"
            },
            "description": "Filter chats by enable_func_interest status"
          },
          {
            "name": "enable_func_proactive_reply",
            "in": "query",
            "required": false,
            "schema": {
              "type": "boolean"
            },
            "description": "Filter chats by enable_func_proactive_reply status"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/PaginatedAPIResponseChatList"
                }
              }
            }
          }
        }
      }
    },
    "/apis/v1/config/chats/{uid}/config": {
      "put": {
        "summary": "Update Chat Config",
        "description": "Update chat configuration by document id",
        "tags": ["Chats"],
        "parameters": [
          {
            "name": "uid",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Chat Document ID"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ChatConfigUpdatePayload"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Updated Successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/APIResponseChat"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "ChannelType": {
        "type": "string",
        "enum": ["Lark", "DingTalk", "WeChat", "Webhook"],
        "description": "Channel type enumeration for different messaging platforms"
      },
      "APIResponse": {
        "type": "object",
        "properties": {
          "code": {
            "type": "integer"
          },
          "message": {
            "type": "string"
          },
          "data": {}
        }
      },
      "Chat": {
        "type": "object",
        "properties": {
          "_id": {
            "type": "string",
            "description": "Chat ID"
          },
          "chat_id": {
            "type": "string",
            "description": "Chat identifier"
          },
          "name": {
            "type": "string",
            "description": "Chat name"
          },
          "chat_type": {
            "type": "string",
            "enum": ["group", "private"],
            "description": "Chat type"
          },
          "channel": {
            "$ref": "#/components/schemas/ChannelType",
            "description": "Enterprise collaboration tool"
          },
          "bot_id": {
            "type": "string",
            "description": "Associated bot ID"
          },
          "description": {
            "type": "string",
            "description": "Chat description"
          },
          "is_active": {
            "type": "boolean",
            "default": true,
            "description": "Whether the chat is active"
          },
          "enable_func_proactive_reply": {
            "type": "boolean",
            "default": false,
            "description": "Whether to enable proactive reply function"
          },
          "enable_func_interest": {
            "type": "boolean",
            "default": false,
            "description": "Whether to enable interest detection function"
          },
          "created_at": {
            "type": "string",
            "format": "date-time",
            "description": "Creation timestamp"
          },
          "updated_at": {
            "type": "string",
            "format": "date-time",
            "description": "Last update timestamp"
          }
        },
        "required": ["chat_id", "name", "chat_type", "channel"]
      },
      "ChatCreateRequest": {
        "type": "object",
        "properties": {
          "chat_id": {
            "type": "string",
            "description": "Chat identifier"
          },
          "name": {
            "type": "string",
            "description": "Chat name"
          },
          "chat_type": {
            "type": "string",
            "enum": ["group", "private"],
            "description": "Chat type"
          },
          "channel": {
            "$ref": "#/components/schemas/ChannelType",
            "description": "Enterprise collaboration tool"
          },
          "bot_id": {
            "type": "string",
            "description": "Associated bot ID"
          },
          "description": {
            "type": "string",
            "description": "Chat description"
          }
        },
        "required": ["chat_id", "name", "chat_type", "channel"]
      },
      "ChatUpdateRequest": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "Chat name"
          },
          "description": {
            "type": "string",
            "description": "Chat description"
          },
          "is_active": {
            "type": "boolean",
            "description": "Whether the chat is active"
          }
        }
      },
      "ChatConfigUpdatePayload": {
        "type": "object",
        "properties": {
          "enable_func_proactive_reply": {
            "type": "boolean",
            "description": "Enable proactive reply function"
          },
          "enable_func_interest": {
            "type": "boolean",
            "description": "Enable interest function"
          }
        }
      },
      "APIResponseChat": {
        "type": "object",
        "properties": {
          "code": {
            "type": "integer"
          },
          "message": {
            "type": "string"
          },
          "data": {
            "$ref": "#/components/schemas/Chat"
          }
        }
      },
      "PaginatedAPIResponseChatList": {
        "type": "object",
        "properties": {
          "code": {
            "type": "integer"
          },
          "message": {
            "type": "string"
          },
          "data": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Chat"
            }
          },
          "limit": {
            "type": "integer"
          },
          "skip": {
            "type": "integer"
          },
          "total": {
            "type": "integer"
          }
        }
      }
    }
  }
}
